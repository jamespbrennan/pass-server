<header>
  <h1>Devices</h1>  
</header>
<% @devices.each do |device| %>
<article>
  <hr />
  <div class="device">
    <%= link_to device.name, device %><% if device.device_type %> <%= device.device_type.name %><% end %>
  </div>
  <div class="device-actions">
    <%= link_to "View", device, :class => "btn-view pull-right" %>
  </div>
</article>
<% end %>
