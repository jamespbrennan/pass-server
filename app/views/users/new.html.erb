<h1>Create an Account</h1>
<% if @user.errors.any? %>
<div class="error_messages">
	<h2>There were some problems creating your account.</h2>
	<ul>
	<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
	</ul>
</div>
<% end %>
<%= form_for @user do |f| %>
	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<%= f.submit "Sign Up" %>
<% end %>